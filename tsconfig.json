{
  "compilerOptions": {
    "lib": [
      "es5",
      "es6",
      "es7",
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "esnext"
    ],
    "target": "esnext",                 
    "module": "commonjs",               
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "esModuleInterop": true,
    "noErrorTruncation": true,
    "jsx": "react-native",
    "skipLibCheck": true,              
    "strict": false,
    "noEmitOnError": false                
  }
}
